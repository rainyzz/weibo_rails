<% provide(:title, 'Home') %>

<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
  </div>
   <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center hero-unit">
    <h1>Weibo On Rails</h1>
    <h2>Welcome to Webo On Rails</h2>
    <%= link_to "Sign Up",  signup_path, class:"btn btn-large btn-primary"%>
</div>
<% end %>